mixin alert-success()
    - if (messages.success)
        #alert-update.fixed.top-4.right-4.w-72.absolute
            #alert-border-3.flex.items-center.p-4.text-green-800.border-t-4.border-green-300.bg-green-50(
                class='dark:text-green-400 dark:bg-gray-800 dark:border-green-800'
                role='alert')
                svg.flex-shrink-0.w-4.h-4(aria-hidden='true' xmlns='http://www.w3.org/2000/svg' fill='currentColor' viewbox='0 0 20 20')
                    path(d='M10 .5a9.5 9.5 0 1 0 9.5 9.5A9.51 9.51 0 0 0 10 .5ZM9.5 4a1.5 1.5 0 1 1 0 3 1.5 1.5 0 0 1 0-3ZM12 15H8a1 1 0 0 1 0-2h1v-3H8a1 1 0 0 1 0-2h2a1 1 0 0 1 1 1v4h1a1 1 0 0 1 0 2Z')
                .ms-3.text-sm.font-medium
                    |#{messages.success}
                button.ms-auto.bg-green-50.text-green-500.rounded-lg.inline-flex.items-center.justify-center.h-8.w-8(
                    type='button'
                    class='-mx-1.5 -my-1.5 focus:ring-2 focus:ring-green-400 p-1.5 hover:bg-green-200 dark:bg-gray-800 dark:text-green-400 dark:hover:bg-gray-700'
                    data-dismiss-target='#alert-border-3'
                    aria-label='Close' id="btn-close-alert")
                    svg.w-3.h-3(aria-hidden='true' xmlns='http://www.w3.org/2000/svg' fill='none' viewbox='0 0 14 14')
                        path(stroke='currentColor' stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6')

mixin alert-error()
    - if (messages.error)
        #alert-update(class="fixed top-4 right-4 w-72 absolute")
            #alert-border-3.flex.items-center.p-4.text-red-800.border-t-4.border-red-300.bg-red-50(
                class='dark:text-red-400 dark:bg-gray-800 dark:border-red-800'
                role='alert')
                svg.flex-shrink-0.w-4.h-4.text-white(aria-hidden='true' xmlns='http://www.w3.org/2000/svg' fill='currentColor' viewbox='0 0 20 20')
                    path(d='M10 .5a9.5 9.5 0 1 0 9.5 9.5A9.51 9.51 0 0 0 10 .5ZM9.5 4a1.5 1.5 0 1 1 0 3 1.5 1.5 0 0 1 0-3ZM12 15H8a1 1 0 0 1 0-2h1v-3H8a1 1 0 0 1 0-2h2a1 1 0 0 1 1 1v4h1a1 1 0 0 1 0 2Z')
                .ms-3.text-sm.font-medium.text-white
                    |#{messages.error}
                button.ms-auto.bg-red-50.text-red-500.rounded-lg.inline-flex.items-center.justify-center.h-8.w-8.text-white(
                    type='button'
                    class='-mx-1.5 -my-1.5 focus:ring-2 focus:ring-red-400 p-1.5 hover:bg-red-200 dark:bg-gray-800 dark:text-red-400 dark:hover:bg-gray-700'
                    data-dismiss-target='#alert-border-3'
                    aria-label='Close' id="btn-close-alert")
                    svg.w-3.h-3(aria-hidden='true' xmlns='http://www.w3.org/2000/svg' fill='none' viewbox='0 0 14 14')
                        path(stroke='currentColor' stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6')
